page {
  height: 100%;
  font-size: 32rpx;
  font-family: -apple-system,
                 BlinkMacSystemFont,
                 'Segoe UI',
                 Roboto,
                 Oxygen,
                 Ubuntu,
                 Cantarell,
                 'Open Sans',
                 'Helvetica Neue',
                 sans-serif;
}

.item {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #f1f1f1;
}

.item:active {
  background: #eee;
}

.item .content {
  display: flex;
  flex-direction: column;
  padding: 30rpx 10rpx;
  justify-content: space-between;
}

.name {
  font-weight: bold;
}

.artists {
  color: #666;
}

.song-thumbail {
  width: 180rpx;
  height: 180rpx;
  margin: 30rpx 20rpx;
  border-radius: 10rpx;
}